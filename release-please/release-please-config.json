{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "separate-pull-requests": true,
  "changelog-sections": [
    {
      "type": "feat",
      "section": "Features"
    },
    {
      "type": "fix",
      "section": "Bug Fixes"
    },
    {
      "type": "perf",
      "section": "Performance Improvements"
    },
    {
      "type": "revert",
      "section": "Reverts"
    },
    {
      "type": "docs",
      "section": "Documentation"
    },
    {
      "type": "refactor",
      "section": "Code Refactoring"
    },
    {
      "type": "test",
      "section": "Tests"
    },
    {
      "type": "build",
      "section": "Build System and CI/CD"
    },
    {
      "type": "deps",
      "section": "Dependencies"
    },
    {
      "type": "chore",
      "section": "Chores",
      "hidden": true
    }
  ],
  "packages": {
    "rune-service": {
      "release-type": "simple",
      "extra-files": [
        "build.gradle.kts"
      ]
    },
    "rune-service-2": {
      "release-type": "simple",
      "extra-files": [
        "build.gradle.kts"
      ]
    },
    "rune-service-3": {
      "release-type": "simple",
      "extra-files": [
        "build.gradle.kts"
      ]
    }
  }
}
